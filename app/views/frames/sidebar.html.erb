<h2><%= Rails.application.secrets.doc_name %></h2>
<small><%= Rails.application.secrets.doc_source %></small>

<!--doc_name: <%#= ENV.fetch("DOC_NAME", "App Name") %>-->
<!--doc_source: <%#= ENV.fetch("DOC_SOURCE", "Based On") %>-->

<%# if params[:debug] %>
  <%#= debug(@folders)%>
  <%#= debug(@grouped_links)%>
<%# end %>

<% @grouped_links.each do |group, links| %>

  <% if @grouped_links.count > 1%><h3><%= group %></h3><% end %>

  <% links.sort_by { |a| a[:title] }.each do |link| %>
    <%#= link.inspect %>
    <ul>
      <li>
        <%= link_to link[:title], link[:url], title: link[:group], target: 'content_frame' %>
      </li>
    </ul>

  <% end %>
<% end %>
